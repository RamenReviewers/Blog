module ramenreviewers.blog.review

shop: Shop
dishes: List<Dish>(!isEmpty)
reviewers: List<String>

class Dish {
  name: String(!isEmpty)
  price: Int(isPositive)
  scoreBroth: Int(isBetween(0,5))
  scoreNoodles: Int(isBetween(0,5))
  scoreToppings: Int(isBetween(0,5))
  description: String(!isEmpty, length < 2048)
}

class Shop {
  name: String(!isEmpty)
  address: String(!isEmpty)
  city: String(!isEmpty)
  zip: String(!isEmpty)
  tags: List<String>(!isEmpty)
  links: List<Link>(!isEmpty)
  scoreAtmosphere: Int(isBetween(0,3))
}

class Link {
  displayName: String(!isEmpty)
  url: String(!isEmpty)
}