module ramenreviewers.blog.review

shop: Shop
dish: Dish
reviewers: List<String>

class Dish {
  name: String(!isEmpty)
  price: Number(isPositive)
  scoreBroth: Number(isBetween(0,5))
  scoreNoodles: Number(isBetween(0,5))
  scoreToppings: Number(isBetween(0,5))
  description: String(!isEmpty, length < 2048)
}

class Shop {
  name: String(!isEmpty)
  address: String(!isEmpty)
  city: String(!isEmpty)
  zip: String(!isEmpty)
  tags: List<String>(!isEmpty)
  links: List<Link>(!isEmpty)
  scoreAtmosphere: Number(isBetween(0,3))
}

class Link {
  displayName: String(!isEmpty)
  url: String(!isEmpty)
}